@model Dev_1400.Models.Comment

<div class="container">

  @using (Html.BeginForm("Create", "Comments", FormMethod.Post))
  {
    @Html.AntiForgeryToken()
      
    <div class="form-horizontal">
      <h4>Add Comment</h4>
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(m => m.PostId)
      @Html.DisplayFor(m => m.Author)
      @Html.HiddenFor(m => m.AuthorId)


      <div class="form-group">
        @Html.LabelFor(model => model.BodyText, "Body", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
          @Html.TextAreaFor(model => model.BodyText, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.BodyText, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Create" class="btn btn-primary" />
        </div>
      </div>
    </div>
    <div>
      @Html.ActionLink("Back to List", "Posts", "Posts", new { id = Model.Id })
    </div>
  }

</div>
<br />