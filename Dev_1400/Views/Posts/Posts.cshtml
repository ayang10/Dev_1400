@model PagedList.IPagedList<Dev_1400.Models.Post>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Blog - Posts";

}

<div class="breadcrumb-wrap">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h4>Blog</h4>
            </div>
            <div class="col-sm-6 hidden-xs text-right">
                <ol class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li>Blog</li>
                </ol>
            </div>
        </div>
    </div>
</div><!--breadcrumbs-->
<div class="divide80"></div>

@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
            </div>

        </div>
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-3 pull-right">
            @using (Html.BeginForm("Index", "Posts", FormMethod.Get))
            {

                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { placeholder = "Search Blog...", Style = "background: white; border: 1px solid black; border-radius: 5px;" })

                <input type="submit" value="Search" />

            }
        </div>
        <div class="col-md-2 pull-right">
            @Html.ActionLink("Ascending Order", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, new { @class = "btn btn-info" })
        </div>
        <div class="col-md-3 pull-right ">
            @Html.ActionLink("All Blog", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            @if (Model.PageCount == 0)
            {
                <p class="h2">No Results found!</p>
            }
            @foreach (var post in Model)
            {
                <div class="blog-post">
                    <a href="@Url.Action("Details", "Posts", new {@post.Id })">
                        <div class="item-img-wrap">
                            @if (post.MediaUrl != null)
                            {
                                <img src="@Url.Content(post.MediaUrl)" class="img-responsive" alt="@post.Title" />
                            }
                            <div class="item-img-overlay">
                                <span></span>
                            </div>
                        </div>
                    </a><!--work link-->
                    <ul class="list-inline post-detail">
                        <li>
                            by
                            <a href="#">A Yang</a>
                        </li>
                        <li>
                            <i class="fa fa-calendar"></i> @post.CreationDate.ToLocalTime().ToString("D")
                        </li>
                        @if (post.UpdateDate != null)
                        {
                            <li>
                                <i class="fa fa-tag"></i>
                                <span>Update: </span> @post.UpdateDate.ToString()
                            </li>
                        }

                        <li>
                            <i class="fa fa-comment"></i>
                            <span>@post.Comments.Count Comments</span>
                        </li>
                    </ul>
                    <h2>
                        @Html.ActionLink(post.Title, "Details", new { @post.Id })
                    </h2>
                    <p>
                        @Html.Raw(post.BodyTextTrimmed)
                    </p>
                    <p>
                        <a href="@Url.Action("Details", "Posts", new {@post.Id })" class="btn btn-theme-dark">Read More...</a>
                    </p>
                    @if (User.IsInRole("Admin"))
                    {
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { @post.Id }, new { @class = "btn btn-success" })
                        </p>
                        <p>
                            @Html.ActionLink("Delete Post", "Delete", new { @post.Id }, new { @class = "btn btn-danger" })
                        </p>

                    }
                </div><!--blog post-->
            }
            <div class="container">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div><!--col-->
    </div><!--row for blog post-->
</div><!--blog full main container-->
